@model UserRolesViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.UserName</h1>
<hr />
<div class="container-fluid">
    <form method="post" asp-action="Edit">
        <input asp-for="UserId" class="form-control" hidden />
        <div>
            <label asp-for="UserName" class="col-form-label"></label>
            <input asp-for="UserName" class="form-control" disabled />
        </div>
        <h3>Manage User Roles</h3>
        <hr />
        @for (int i = 0; i < Model.Roles.Count; i++)
        {
            <div>
                <input asp-for="@Model.Roles[i].Name" hidden />
                <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" />
                <label class="form-check-label" asp-for="@Model.Roles[i]">@Model.Roles[i].Name</label>
                <span asp-validation-for="Roles"></span>
            </div>
        }
        <br />
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back To List</a>
    </form>
</div>
